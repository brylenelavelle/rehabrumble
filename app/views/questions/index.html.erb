<div>
  <div>
    <h1>
      List of all questions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new question
    </h2>

    <form action="/insert_question" method="post">
      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <div>
        <label for="wrong_answer_1_box">
          Wrong answer 1
        </label>

        <textarea id="wrong_answer_1_box" name="query_wrong_answer_1" rows="3"></textarea>
      </div>

      <div>
        <label for="wrong_answer_2_box">
          Wrong answer 2
        </label>

        <textarea id="wrong_answer_2_box" name="query_wrong_answer_2" rows="3"></textarea>
      </div>

      <div>
        <label for="wrong_answer_3_box">
          Wrong answer 3
        </label>

        <textarea id="wrong_answer_3_box" name="query_wrong_answer_3" rows="3"></textarea>
      </div>

      <div>
        <label for="correct_answer_box">
          Correct answer
        </label>

        <textarea id="correct_answer_box" name="query_correct_answer" rows="3"></textarea>
      </div>

      <div>
        <label for="source_file_id_box">
          Source file
        </label>

        <input type="text" id="source_file_id_box" name="query_source_file_id">
      </div>

      <div>
        <label for="question_box">
          Question
        </label>

        <textarea id="question_box" name="query_question" rows="3"></textarea>
      </div>

      <button>
        Create question
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Wrong answer 1
        </th>

        <th>
          Wrong answer 2
        </th>

        <th>
          Wrong answer 3
        </th>

        <th>
          Correct answer
        </th>

        <th>
          Source file
        </th>

        <th>
          Question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_questions.each do |a_question| %>
      <tr>
        <td>
          <%= a_question.id %>
        </td>

        <td>
          <%= a_question.category_id %>
        </td>

        <td>
          <%= a_question.wrong_answer_1 %>
        </td>

        <td>
          <%= a_question.wrong_answer_2 %>
        </td>

        <td>
          <%= a_question.wrong_answer_3 %>
        </td>

        <td>
          <%= a_question.correct_answer %>
        </td>

        <td>
          <%= a_question.source_file_id %>
        </td>

        <td>
          <%= a_question.question %>
        </td>

        <td>
          <%= time_ago_in_words(a_question.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_question.updated_at) %> ago
        </td>

        <td>
          <a href="/questions/<%= a_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
