<div class = "login">

<h1 class = "login-title">Sign in</h1>

<form action="/user_verify_credentials" method="post" class="login-form">
  <div>
    <div>
    <label for="email_box">Email</label>
    </div>
    <input id="email_box" name="query_email" placeholder="Enter your email..." type="text" class="login-input">
  </div>

  <div>
    <div>
    <label for="password_box">Password</label>
    </div>
    <input id="password_box" name="query_password" placeholder="Enter your password..." type="password" class="login-input">
  </div>

  <button class="login-submit">
    Sign in
  </button>

  <p>
  Don't have an account? <a href="/user_sign_up">Sign up</a>
  </p>
</form>


</div>
