<div>
  <div>
    <h1>
      Test #<%= @the_test.id %> details
    </h1>

    <div>
      <div>
        <a href="/tests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_test/<%= @the_test.id %>">
          Delete test
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Source file
      </dt>
      <dd>
        <%= @the_test.source_file_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_test.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_test.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_test.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit test
    </h2>

    <form action="/modify_test/<%= @the_test.id %>"  method="post" >
      <div>
        <label for="source_file_id_box">
          Source file
        </label>

        <input type="text" id="source_file_id_box" name="query_source_file_id" value="<%= @the_test.source_file_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_test.user_id %>">
      </div>

      <button>
        Update test
      </button>
    </form>
  </div>
</div>

<hr>
